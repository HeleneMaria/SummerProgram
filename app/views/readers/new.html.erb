<h2>Add reader</h2>

 <script type="text/javascript">
  
   function changeFunc() {
    var selectBox = document.getElementById("reader_schoolFallName");
    var newSchool = document.getElementById("reader_newSchoolFallName");
    if (selectBox.selectedIndex ==0){
    	newSchool.style.display = 'block';
    }
    else{
    	newSchool.style.display = 'none';
    }
   }

  </script>

<div class="row">
	<div class="span6 offset">
		<%= form_for (@reader) do |f| %>
			<%= render 'shared/error_messages', object: f.object%>
		
			<%= f.label :firstName %>
			<%= f.text_field :firstName %>
			
			<%= f.label :lastName %>
			<%= f.text_field :lastName %>
			
			<%= f.label :phoneNumber %>
			<%= f.text_field :phoneNumber %>
			
			<%= f.label :email %>
			<%= f.text_field :email %>
			
			<%= f.label :age %>
			<%= f.text_field :age %>
			
			<%= f.label :schoolFallName %>
			<%= f.collection_select :schoolFallName, @schools,:schoolFallName,:schoolFallName, {:prompt=> "Add new"}, {:onChange=>"changeFunc();"}  %>
			
			<%= f.text_field :newSchoolFallName%>
			
			<%= f.label :schoolFallGrade %>
			<%= f.select :schoolFallGrade, options_for_select(@grade)%>
			
			<%= f.label :program %>
			<%= f.select :program, options_for_select(@programs) %>

			<%= f.label :tShirtSize %>
			<%= f.select :tShirtSize, options_for_select(@size) %>
			
			<%= f.label :notes %>
			<%= f.text_field :notes %>
			
			<%=f.submit "Create the reader", class: "btn btn-large btn-primary"%>
		<% end %>
	</div>
</div>
