<h2>Add reader</h2>

<div class="row">
	<div class="span6 offset">
		<%= form_for (@reader) do |f| %>
			<%= render 'shared/error_messages'%>
		
			<%= f.label :firstName %>
			<%= f.text_field :firstName %>
			
			<%= f.label :lastName %>
			<%= f.text_field :lastName %>
			
			<%= f.label :phoneNumber %>
			<%= f.text_field :phoneNumber %>
			
			<%= f.label :email %>
			<%= f.text_field :email %>
			
			<%= f.label :schoolFallName %>
			<%= f.text_field :schoolFallName %>
			
			<%= f.label :schoolFallGrade %>
			<%= f.text_field :schoolFallGrade %>
			
			<%= f.label :program %>
			<%= f.text_field :program %>
			
			<%=f.submit "Create the reader", class: "btn btn-large btn-primary"%>
		<% end %>
	</div>
</div>
