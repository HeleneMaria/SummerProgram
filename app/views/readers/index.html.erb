<h2>All Readers</h2>

<%= will_paginate %>
<%=link_to 'Add new Reader', addNewReader_path,class: "btn btn-large btn-primary", style:"margin-bottom:10px;" %>
<ul class="readers">
	 <p class='pretty'>Order by : <%=sortable "\"firstName\"","First Name"%> - <%= sortable "\"lastName\"","Last Name"%></p>
	<% @readers.each do |reader| %>
	<li>
	<%=link_to reader.firstName+" "+reader.lastName, reader%>
	| <%=link_to 'Delete', reader, method: :delete,  data: {confirm: "Are you sure?"}  %>
	</li>
	<% end %>
</ul>
