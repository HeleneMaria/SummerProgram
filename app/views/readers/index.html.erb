<h2>All Readers</h2>

<%= will_paginate %>
<%=link_to 'Add new Reader', addNewReader_path %>
<ul class="readers">
	<% @readers.each do |reader| %>
	<li>
	<%=link_to reader.firstName+" "+reader.lastName, reader%>
	| <%=link_to 'Delete', reader, method: :delete, confirm: "Are you sure?" %>
	</li>
	<% end %>
</ul>