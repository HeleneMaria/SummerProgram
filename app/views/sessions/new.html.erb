<h2>Sign in</h2>
<div class="row">
	<div class="span 6 offset 3">
		<%= form_for(:session, url: sessions_path) do |f| %>
		
			<%= f.label :username %>
			<%= f.text_field :username %>
			
			<%= f.label :password %>
			<%= f.text_field :password %>
			
			<%=f.submit "Sign in", class: "btn btn-large btn-primary"%>
		<%end%>
	</div>
</div>
